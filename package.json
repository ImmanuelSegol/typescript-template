{
  "name": "typescript-template",
  "description": "A basic template for Typescript projects",
  "author": "Conor Byrne",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cbyrneee/typescript-template"
  },
  "main": "build/index.js",
